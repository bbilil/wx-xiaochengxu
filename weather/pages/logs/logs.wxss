  background: #031E3D;
  padding: 20rpx;
  box-sizing: border-box;
}
.box{
  width: 100%;
}
.title{
  color: #fff;
  font-size: 28rpx;
}
.text{
  background: #fff;
  border-radius: 10rpx;
  font-size: 24rpx;
  display: inline-block;
  width: 100%;
  padding-left: 20rpx;
   box-sizing: border-box;
   margin: 20rpx 0;
}
